{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "dist/",
    "strict": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["*"],
      "@setup/*": ["../tests/setup/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
